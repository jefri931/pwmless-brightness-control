{
  "name": "pwmless-brightness-control",
  "version": "1.0.0",
  "description": "Developed for people with sentivitity to PWM flickering. Allows you to adjust brightness without affecting PWM using a simple slider. The optimal way to use this is to set the brightness of the Steam Deck to 100% and then use the slider to adjust the brightness without affecting PWM.",
  "scripts": {
    "build": "shx rm -rf dist && rollup -c",
    "watch": "rollup -c -w",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "decky",
    "plugin",
    "pwm",
    "brightness",
    "steam-deck",
    "deck",
    "accessibility"
  ],
  "author": "Daniel Stoynev",
  "license": "GPL-3.0",
  "devDependencies": {
    "@rollup/plugin-commonjs": "21.1.0",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.3.0",
    "@rollup/plugin-replace": "4.0.0",
    "@rollup/plugin-typescript": "8.5.0",
    "@types/react": "16.14.60",
    "@types/webpack": "5.28.3",
    "rollup": "2.79.1",
    "@decky/ui": "^4.9.0",
    "rollup-plugin-import-assets": "1.1.1",
    "shx": "0.3.4",
    "tslib": "2.6.2",
    "typescript": "4.9.5"
  },
  "dependencies": {
    "decky-frontend-lib": "3.25.0",
    "react-icons": "4.11.0",
    "typescript-json-serializer": "6.0.1"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom"
      ]
    }
  }
}
